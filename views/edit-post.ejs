<%- include("partials/header.ejs") %>

<div class="container">
    <form action="/update-post/<%= postId %>" method="POST">
        <div class="form-group">
            <label for="authorInput">Author</label>
            <input type="text" class="form-control" id="authorInput" name="author" value="<%= post.author %>" required>
        </div>
        <div class="form-group">
            <label for="titleInput">Title</label>
            <input type="text" class="form-control" id="titleInput" name="title" value="<%= post.title %>" required>
        </div>
        <div class="form-group">
            <label for="bodyInput">Body</label>
            <textarea class="form-control" id="bodyInput" name="body" rows="5" required><%= post.body.join('\n') %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>

<%- include("partials/footer.ejs") %>